#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Backend checks
echo ""
echo "=== BACKEND CHECKS ==="
cd apps/backend

echo "ğŸ“ Linting backend..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Backend lint failed! Fix errors before committing."
  exit 1
fi

echo "ğŸ” Type-checking backend..."
npx tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ Backend type-check failed! Fix TypeScript errors before committing."
  exit 1
fi

echo "ğŸ“¦ Building backend..."
npm run build
if [ $? -ne 0 ]; then
  echo "âŒ Backend build failed!"
  exit 1
fi

cd ../..

# Frontend checks
echo ""
echo "=== FRONTEND CHECKS ==="
cd apps/frontend

echo "ğŸ“ Linting frontend..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Frontend lint failed! Fix errors before committing."
  exit 1
fi

echo "ğŸ” Type-checking frontend..."
npx tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ Frontend type-check failed! Fix TypeScript errors before committing."
  exit 1
fi

echo "ğŸ“¦ Building frontend..."
npm run build
if [ $? -ne 0 ]; then
  echo "âŒ Frontend build failed!"
  exit 1
fi

cd ../..

echo ""
echo "âœ… All pre-commit checks passed!"
echo "ğŸ‰ Committing..."
